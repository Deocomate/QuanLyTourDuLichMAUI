<!-- DaiLyView/Index.razor -->
@page "/daily/index"
@using TourManagementMAUI.Services

@inject NavigationManager navigationManager
<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title mb-0">Danh sách đại lý</h3>
                    <div>
                        <button @onclick="Create" class="btn btn-success">Thêm đại lý mới</button>
                        <button @onclick="ExportToExcel" class="btn btn-info">Xuất file Excel</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (!message.Equals(""))
                {
                    <div class="alert alert-primary" role="alert">
                        @message
                    </div>
                }
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên đại lý</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list)
                        {
                            <tr>
                                <td>@item.DaiLyID</td>
                                <td>@item.TenDaiLy</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.Email</td>
                                <td>@item.DiaChi</td>
                                <td><button class="btn btn-warning" @onclick=@(() => Edit(item.DaiLyID))>Sửa</button></td>
                                <td><button class="btn btn-danger" @onclick=@(() => Delete(item.DaiLyID))>Xóa</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@code {
    public List<DaiLy> list;
    private string message = "";  // Biến lưu thông báo
    protected override async Task OnInitializedAsync()
    {
        list = DaiLyDAO.List();
    }

    public void Create()
    {
        navigationManager.NavigateTo("/daily/create");
    }
    public void Edit(int id)
    {
        navigationManager.NavigateTo($"/daily/edit/{id}");

    }
    public void Delete(int id)
    {
        DaiLyDAO.Delete(id);
        OnInitializedAsync();
    }

    private void ExportToExcel()
    {
        // Xuất file Excel
        DaiLyExcel excelService = new DaiLyExcel();
        excelService.ExportToExcel(list);
        message = "Xuất file Excel thành công!";
    }
}
