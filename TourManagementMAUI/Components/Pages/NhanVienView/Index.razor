@page "/nhanvien/index"
@inject NavigationManager NavigationManager
<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title mb-0">Danh sách nhân viên</h3>
                    <button @onclick="Create" class="btn btn-success">Thêm nhân viên mới</button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên nhân viên</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Phòng ban</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list)
                        {
                            <tr>
                                <td>@item.NhanVienID</td>
                                <td>@item.TenNhanVien</td>
                                <td>@item.GioiTinh</td>
                                <td>@item.NgaySinh.ToShortDateString()</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.Email</td>
                                <td>@item.DiaChi</td>
                                <td>@item.PhongBan</td>
                                <td><button class="btn btn-warning" @onclick=@(()=>Edit(item.NhanVienID))>Sửa</button></td>
                                <td><button class="btn btn-danger" @onclick=@(()=>Delete(item.NhanVienID))>Xóa</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    public List<NhanVien> list;
    protected override async Task OnInitializedAsync()
    {
        list = NhanVienDAO.List(); // Đảm bảo rằng bạn đã tạo phương thức List() trong NhanVienDAO
    }

    public void Create()
    {
        NavigationManager.NavigateTo("/nhanvien/create");
    }
    public void Edit(int id)
    {
        NavigationManager.NavigateTo($"/nhanvien/edit/{id}");
    }
    public void Delete(int id)
    {
        NhanVienDAO.Delete(id);
        // Gợi ý: Nên gọi lại OnInitializedAsync() để cập nhật danh sách sau khi xóa thay vì sử dụng NavigationManager.Refresh()
        // Lý do là NavigationManager.Refresh() có thể không luôn làm mới trang trong một số trường hợp.
        OnInitializedAsync();
    }
}
