@page "/khachhang/edit/{id:int}"
@inject NavigationManager NavigationManager

<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title mb-0">Sửa thông tin: @item.TenKhachHang</h3>
                </div>
            </div>
            <div class="card-body">
                <form @onsubmit="Update">
                    <div class="form-container">
                        <div class="mb-3">
                            <label class="form-label">Tên Khách Hàng</label>
                            <input type="text" class="form-control" name="TenKhachHang" required @bind="@item.TenKhachHang">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Giới Tính</label>
                            <input type="text" class="form-control" name="GioiTinh" required @bind="@item.GioiTinh">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tuổi</label>
                            <input type="number" class="form-control" name="Tuoi" required @bind="@item.Tuoi">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số Điện Thoại</label>
                            <input type="text" class="form-control" name="SoDienThoai" required @bind="@item.SoDienThoai">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="Email" required @bind="@item.Email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ</label>
                            <input type="text" class="form-control" name="DiaChi" required @bind="@item.DiaChi">
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-success">Cập nhật</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int id { get; set; }

    KhachHang item = new KhachHang();

    protected override async Task OnInitializedAsync()
    {
        item = KhachHangDAO.Find(id);
    }

    public void Update()
    {
        KhachHangDAO.Update(id, item);
        NavigationManager.NavigateTo("/khachhang/index");
    }
}
